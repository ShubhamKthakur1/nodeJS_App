{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <a style="text-decoration: none; color:grey;text-align:center;" href = "/home">Student has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></a>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h3>Students</h3>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/logout" type="button" class="btn btn-primary align-self-center" style="color:black;background-color: rgb(145, 219, 176);">logout</a>
    <a style = "margin-left:5px;" href="/adduser" type="button" class="btn btn-primary align-self-center">+ add</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr style = "text-align: center;">
      <th scope="col">#</th>
      <th scope="col">Roll</th>
      <th scope="col">Name</th>
      <th scope="col">DOB</th>
      <th scope="col">Score</th>
      <th scope="col" >Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr style = "text-align: center;">
      <th scope="row">{{this.id}}</th>
      <td>{{this.roll}}</td>
      <td>{{this.name}}</td>
      <td>{{this.dob}}</td>
      <td>{{this.score}}</td>
      <td>
        <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>